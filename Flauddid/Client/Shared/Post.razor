<div class="container postCard fontDesign" style="background-color: #242424!important">
    <div class="row">
        <div class="col-sm-1" style="background-color: #262626!important; border-radius: 10px 0px 0px 10px">
            <div class="voteButton">
                <a><span class="material-icons" style="@(post.VoteState == Domain.Entities.VoteState.Up ? "color: orange" : "")" @onclick="PostUpVote">arrow_upward</span></a>
                <div style="@(post.VoteState == Domain.Entities.VoteState.Up || post.VoteState == Domain.Entities.VoteState.Down ? "color: orange" : "")">@Votes</div>
                <a><span class="material-icons" style="transform: rotate(180deg); @(post.VoteState == Domain.Entities.VoteState.Down ? "color: orange" : "")" @onclick="PostDownVote">arrow_upward</span></a>
            </div>
        </div>
        <div class="col-sm-11">
            <div class="row d-flex flex-row postInfo" @onclick="OpenPost" style="cursor: pointer">
                <div class="p-2">r/@post.Subreddit</div>
                <div class="p-2 secondaryBtnColor">by u/@post.Author</div>
            </div>
            <div class="row d-flex flex-row" @onclick="OpenPost" style="cursor: pointer">
                <h3 class="title">@post.Title</h3>
            </div>
            <div class="row" @onclick="OpenPost" style="cursor: pointer">
                <img class="img-fluid" src="@post.Content" />
            </div>
            <div class="row d-flex flex-row secondaryBtnColor postButtons" style="background-color: #262626!important; border-radius: 0px 0px 10px 0px;">
                <a><span class="material-icons">forum</span>Comments</a>
                <a><span class="material-icons">share</span>Share</a>
                <a><span class="material-icons">archive</span>Save</a>
            </div>
        </div>
    </div>
</div>

